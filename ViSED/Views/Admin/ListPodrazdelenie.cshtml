@model IEnumerable<ViSED.Models.Podrazdeleniya>

@{
    ViewBag.Title = "Список подразделений";
}

<h4>Список подразделений</h4>

<p>
    @Html.ActionLink("Добавить подразделение", "AddPodrazdelenie","Admin",null,null)
</p>
<table class="table">
    <tr>
        <th>
            Наименование подразделения
        </th>
        <th>
            Бланок подразделения
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @System.IO.Path.GetFileName(Html.DisplayFor(modelItem => item.Blank).ToString())
        </td>
        <td>
            @Html.ActionLink("Изменить", "EditPodrazdelenie","Admin", new { id=item.id },null) |
            @Html.ActionLink("Удалить", "DelPodrazdelenie", "Admin", new { id=item.id },null)
        </td>
    </tr>
}

</table>
