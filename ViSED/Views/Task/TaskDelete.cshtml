@model ViSED.Models.Tasks

@{
    ViewBag.Title = "Удалить задачу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Удалить задачу</h4>

<h5>Вы уверены, что хотите удалить эту задачу?</h5>
<div>
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Model.taskName
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Удалить" class="knopka" />
    }
</div>
