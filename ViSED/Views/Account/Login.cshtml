@model ViSED.ProgramLogic.LoginViewModel
@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/Content/login-style.css">
<div class="wrapper">
    <div class="container">
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()


            <h1>Добро пожаловать</h1><br>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Логин" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Пароль" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" id="login-button">Войти</button>
                </div>
            </div>

        }
    </div>
    <ul class="bg-bubbles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</div>