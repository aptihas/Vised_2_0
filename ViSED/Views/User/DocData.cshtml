@{
    ViewBag.Title = "Данные документа";
}

<h4>Данные документа</h4>



@using (Html.BeginForm("DocSave", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <p>Получатель</p>
    @Html.DropDownList("user_to_id", ViewBag.Users as SelectList, null, new { multiple = "multiple" })
    <input name="doc_id" type="text" value="@ViewBag.Doc.id" style="visibility:hidden;" />
    <br />
    <br />
    <p>Текст документа</p>
    <textarea name="text" cols="45" rows="20" style="width:600px !important;"> </textarea>
    <br />

    <div class="form-group">
        <div class="col-md-10">
            <input type="file" name="attachment" multiple />
        </div>
    </div>
    <br />
    <select name="myDocs" multiple>
        <option value="null">Не выбрано</option>
        @foreach (ViSED.Models.MyDocs m in ViewBag.MyDocs)
        {
            <option value="@m.id">@m.myDocName</option>
        }
    </select>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </div>
}